<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.mtglifetrackerapp.HealthFragment"
        android:layout_width="197dp"
        android:layout_height="320dp"
        android:layout_margin="5dp"
        android:background="@color/player1"
        android:rotation="0"
        android:tag="player1Fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_health" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="com.example.mtglifetrackerapp.HealthFragment"
        android:layout_width="197dp"
        android:layout_height="320dp"
        android:layout_margin="5dp"
        android:background="@color/player2"
        android:rotation="180"
        android:tag="player2Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_health" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView3"
        android:name="com.example.mtglifetrackerapp.HealthFragment"
        android:layout_width="197dp"
        android:layout_height="320dp"
        android:layout_margin="5dp"
        android:background="@color/player3"
        android:rotation="0"
        android:tag="player3Fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_health" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView4"
        android:name="com.example.mtglifetrackerapp.HealthFragment"
        android:layout_width="197dp"
        android:layout_height="320dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/player4"
        android:rotation="180"
        android:tag="player4Fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_health" />

    <ImageButton
        android:id="@+id/diceButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/d6"
        tools:srcCompat="@drawable/d6" />

</androidx.constraintlayout.widget.ConstraintLayout>